VERSION=1.0.0
DEBUG=false

# File System Settings
# Default data directory in user's home folder
DATA_DIR=${HOME}/.todo/data
TASKS_FILE=tasks.json
BACKUP_FILE=tasks.json.bak

# Security Settings
# File permissions in octal (owner read/write only)
FILE_PERMISSIONS=600
FILE_OWNER_ONLY=true

# Operational Limits
# Maximum number of tasks allowed
MAX_TASKS=1000
# Maximum length of task description in characters
MAX_DESCRIPTION_LENGTH=200
# Maximum file size in bytes (1MB)
MAX_FILE_SIZE=1048576

# Input Validation
# Regular expression for allowed characters in task descriptions
ALLOWED_CHARS=^[a-zA-Z0-9\s\.,!?-]*$

# Performance Settings
# Operation timeout in milliseconds
OPERATION_TIMEOUT=1000

# Logging Configuration
LOG_LEVEL=ERROR
# Maximum log file size in bytes (1MB)
MAX_LOG_SIZE=1048576
LOG_FILE=${DATA_DIR}/todo.log